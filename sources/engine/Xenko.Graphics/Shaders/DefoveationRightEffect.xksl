shader DefoveationRightEffect : DefoveationEffect
{
    stage override float4 Shading()
    {
		float2 uv = Defoveate(streams.TexCoord);
		uv.x = (uv.x / 2) + 0.5;
		return Texture0.Sample(Sampler, uv);
    }
};
